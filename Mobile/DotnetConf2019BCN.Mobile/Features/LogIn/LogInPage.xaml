<?xml version="1.0" encoding="UTF-8" ?>
<framework:BaseContentPage
  x:Class="DotnetConf2019BCN.Mobile.Features.LogIn.LogInPage"
  xmlns="http://xamarin.com/schemas/2014/forms"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:effects="clr-namespace:DotnetConf2019BCN.Mobile.Effects"
  xmlns:framework="clr-namespace:DotnetConf2019BCN.Mobile.Framework"
  xmlns:local="clr-namespace:DotnetConf2019BCN.Mobile.Features.LogIn"
  x:DataType="local:LoginViewModel"
  x:TypeArguments="local:LoginViewModel"
  ControlTemplate="{StaticResource FullScreenLoadingTemplate}">

  <ContentPage.Content>

    <Grid>
      <Grid.Padding>
        <Thickness
          Left="{StaticResource Default2Margin}"
          Right="{StaticResource Default2Margin}" />
      </Grid.Padding>

      <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>

      <ContentView Grid.Row="0">

        <Image
          Margin="{StaticResource DefaultMargin}"
          HeightRequest="64"
          HorizontalOptions="Center"
          Source="logo_horizontal_b.png"
          VerticalOptions="Center"
          WidthRequest="240" />

      </ContentView>

      <StackLayout Grid.Row="1">

        <Label
          Style="{StaticResource BrandonGrotesqueLightSmallFontStyle}"
          Text="Email" />

        <Entry
          AutomationId="usernameField"
          Text="{Binding Email}">
          <Entry.Effects>
            <effects:BorderlessEntryEffect />
          </Entry.Effects>

        </Entry>

        <Label
          Style="{StaticResource BrandonGrotesqueLightSmallFontStyle}"
          Text="Password">
          <Label.Margin>
            <Thickness Top="{OnPlatform Android={StaticResource DefaultMargin}, iOS={StaticResource 2xDefaultMargin}}" />
          </Label.Margin>
        </Label>

        <Entry
          AutomationId="passwordField"
          IsPassword="true"
          Text="{Binding Password}">
          <Entry.Effects>
            <effects:BorderlessEntryEffect />
          </Entry.Effects>
        </Entry>

      </StackLayout>

      <StackLayout
        Grid.Row="2"
        Spacing="{StaticResource Default2Margin}"
        VerticalOptions="End">
        <StackLayout.Padding>
          <Thickness
            Top="{OnPlatform Android={StaticResource 2xDefaultMargin},
                             iOS={StaticResource 4xDefaultMargin}}"
            Bottom="{OnPlatform Android={StaticResource 2xDefaultMargin},
                                iOS={StaticResource 4xDefaultMargin}}" />
        </StackLayout.Padding>

        <Button
          AutomationId="loginButton"
          Command="{Binding LogInCommand}"
          Style="{StaticResource Accent2ColorButtonStyle}"
          Text="LOG IN" />

      </StackLayout>

    </Grid>

  </ContentPage.Content>
</framework:BaseContentPage>
